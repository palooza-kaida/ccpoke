      <div class="min-w-0">
        <h3 class="text-base font-bold mb-1.5">{ts(locale, "setupStep1Title")}</h3>
        <p class="text-[0.88rem] text-txt-2 leading-relaxed" set:html={ts(locale, "setupStep1Desc")} />
