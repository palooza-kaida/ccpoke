---
import { ts, alternateLocales, type Locale } from "../i18n";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  locale: Locale;
  title?: string;
  description?: string;
  currentPath?: string;
  showSectionNav?: boolean;
}

const { locale, currentPath = "/", showSectionNav = false } = Astro.props;
const base = import.meta.env.BASE_URL;
const title = Astro.props.title ?? ts(locale, "title");
const description = Astro.props.description ?? ts(locale, "metaDesc");
const alternates = alternateLocales(locale, currentPath, base);
---

<!DOCTYPE html>
<html lang={locale === "zh" ? "zh-CN" : locale}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  {alternates.map(({ locale: loc, href }) => (
    <link rel="alternate" hreflang={loc === "zh" ? "zh-CN" : loc} href={href} />
  ))}
  <link rel="icon" type="image/svg+xml" sizes="any" href={`${base}favicon.svg`}>
  <link rel="apple-touch-icon" href={`${base}favicon.svg`}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <script is:inline define:vars={{ base, locale }}>
    (function() {
      var saved = localStorage.getItem("ccpoke-locale");
      if (!saved || saved === locale) return;
      var supported = ["en", "vi", "zh"];
      if (supported.indexOf(saved) === -1) return;

      var path = location.pathname.replace(base, "/").replace(/^\/[a-z]{2}\//, "/");
      var target = saved === "en"
        ? base + (path === "/" ? "" : path.slice(1))
        : base + saved + path;

      if (!target.endsWith("/")) target += "/";
      window.location.replace(target + location.search);
    })();
  </script>
</head>
<body class="min-h-screen">
  <Navbar locale={locale} currentPath={currentPath} showSectionNav={showSectionNav} />
  <slot />
  <Footer />
</body>
</html>
